<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modify Services</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> 
    <link rel="stylesheet" href="../../css/style.css">
    <!-- For the css, you need to go two directories up, hence the double "../" -->
</head>

<body>
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="./business_index.html">Business Name</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" 
          aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup" style="display:flex; margin-left: auto">
            <div class="navbar-nav">
              <a class="nav-link active" href="./business_index.html">Home</a>
              <a class="nav-link" href="./services_requested.html">See Requested Services</a>
              <a class="nav-link" href="./services_modify.html">Modify Services</a>
              <a class="nav-link" href="./business_edit.html">Edit Business Information</a> 
            </div>
            <button class="btn btn-danger" style="display:flex; margin-left: auto" onclick="location.href='../login.html'">Logout</button> 
          </div>
        </div>
      </nav>

      <div class="container">
        <h1>Manage Your Services</h1>
        <p>Here are the services you currently offer:</p>

        <div id="service-list">
            <!-- Loop through the services passed from the server -->
            <% services.forEach(service => { %>
                <div class="service" id="service-<%= service._id %>">
                    <div class="service-name">Service:</div>
                    <p class="service-description"><%= service.name %></p>
                    <p class="service-description">Price: $<%= service.price %></p>
                    <p class="service-description"><%= service.description %></p>
                    <div class="options">
                        <button class="option-box" onclick="modifyService('<%= service._id %>')">Modify</button>
                        <button class="option-box" onclick="removeService('<%= service._id %>')" style="background-color: lightcoral">Delete</button>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="options" style="margin-top: 30px;">
            <button class="option-box" onclick="addService()">Add New Service</button>
        </div>
    </div>

    <div class="options" style="margin: 20px auto; text-align: center;">
        <button class="go-back-button" onclick="goBack()">Go Back</button>
    </div>

    <script>
        async function modifyService(serviceId) {
            const newName = prompt("Enter the new name for the service:");
            const newPrice = prompt("Enter the new price for the service:");
            const newDescription = prompt("Enter the new description for the service:");
            if (newName && newPrice && newDescription) {
                await fetch(`/business/services/${serviceId}`, {
                    method: "PUT",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({ name: newName, price: newPrice, description: newDescription })
                });
                location.reload(); // Refresh the page
            }
        }

        async function removeService(serviceId) {
            if (confirm("Are you sure you want to delete this service?")) {
                await fetch(`/business/services/${serviceId}`, {
                    method: "DELETE"
                });
                location.reload(); // Refresh the page
            }
        }

        async function addService() {
            const name = prompt("Enter the name of the new service:");
            const price = prompt("Enter the price of the new service:");
            const description = prompt("Enter a description for the new service:");
            if (name && price && description) {
                await fetch("/business/services", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({ name, price, description })
                });
                location.reload(); // Refresh the page
            }
        }

        function goBack() {
            window.history.back();
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" 
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" 
    crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" 
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" 
    crossorigin="anonymous"></script>
</body>
</html>
