    <script>

    // Function to add a card
    async function addCard() {
    const cardType = prompt("Enter card type: Visa or Mastercard");
    if (cardType && (cardType.toLowerCase() === "visa" || cardType.toLowerCase() === "mastercard")) {
        const cardNumber = prompt("Enter card number (**** **** **** XXXX)");
        const expiryDate = prompt("Enter expiry date (MM/YY)");
        const cardName = prompt("Enter card name:");

        // Normalize cardType to proper case (Visa or Mastercard)
        const normalizedCardType = cardType.charAt(0).toUpperCase() + cardType.slice(1).toLowerCase();

        const response = await fetch('/addCard', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ cardType: normalizedCardType, cardNumber, expiryDate, cardName })
        });

        if (response.ok) {
            alert('Card added successfully!');
            loadCards(); // Reload the cards after adding one
        } else {
            alert("Failed to add the card.");
        }
    } else {
        alert("Please enter a valid card type.");
    }
}




        // Function to load all the cards from the database
        async function loadCards() {
    try {
        const response = await fetch('/getCards');
        if (response.ok) {
            const cards = await response.json();
           

            // Call displayCards to update the DOM
            displayCards(cards);
        } else {
            console.error('Failed to fetch cards:', response.statusText);
        }
    } catch (error) {
        console.error('Error fetching cards:', error);
    }
}

function displayCards(cards) {
    const cardContainer = document.getElementById('cardContainer');
    cardContainer.style.display = 'block'; // Ensure the container is visible
    cardContainer.innerHTML = ''; // Clear existing content

    cards.forEach(card => {
        const cardElement = document.createElement('div');
        cardElement.classList.add('card');
        cardElement.innerHTML = `
            <div class="card-body">
                <img src="../../css/Images/${card.cardType}.png" class="small-image">
                <h3>**** **** **** ${card.cardNumber.slice(-4)}</h3>
                <h4>Expiry date: ${card.expiryDate}</h4>
                 <h4>${card.cardName}</h4>
                <button class="option-box" onclick="deleteCard('${card._id}')">Delete</button>
            </div>
        `;
        cardContainer.appendChild(cardElement);
    });
}
        // Function to delete a card
        async function deleteCard(cardId) {
            const response = await fetch(`/deleteCard/${cardId}`, {
                method: 'DELETE',
            });

            if (response.ok) {
                alert('Card deleted successfully!');
                loadCards(); // Reload the cards after deleting one
            } else {
                alert("Failed to delete the card.");
            }
        }

        // Load the cards when the page is loaded
        window.onload = loadCards;
    </script>


