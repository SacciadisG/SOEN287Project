      </nav>
    <div class="container">
    <h1>Service View</h1>
    <p>All purchased services</p>

    <!-- Show services from user (maybe with date of purchase) -->
    <div class="service">
        <h2>Past</h2>
        <p class="service-name">
          <% if (currentUser.service_list.length === 0) { %>
            Empty
          <% } else { %>
            <%= currentUser.service_list.join(', ') %>
          <% } %>
        </p>
    </div>

    <div class="service">
        <h2>Present</h2>
        <p class="service-name">
          <% if (currentUser.service_list.length === 0) { %>
            Empty
          <% } else { %>
            <%= currentUser.service_list.join(', ') %>
          <% } %>
        </p>
    </div>

    <div class="service">
        <h2>Future</h2>
        <p class="service-name">
          <% if (currentUser.service_list.length === 0) { %>
            Empty
          <% } else { %>
            <%= currentUser.service_list.join(', ') %>
          <% } %>
        </p>
    </div>


    <b>For more detail on the services</b>
    <div class="option-box"><a href="/client/receipts_view">Click here</a></div>
</div>
