<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Purchases</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> 
    <link rel="stylesheet" href="../css/style.css">
</head>
<body>
    <%- include('../partials/client_navbar') %>
    <%- include('../partials/flash_messages') %>
    <div class="container my-5">
        <h1 class="text-center mb-4">My Purchases</h1>

        <!-- Requested Services Section -->
        <h2>Requested Services</h2>
        <% if (requestedServices.length > 0) { %>
            <ul class="list-group mb-5">
                <% requestedServices.forEach(purchase => { %>
                    <li class="list-group-item">
                        <strong>Service:</strong> <%= purchase.service.name %> <br>
                        <strong>Price:</strong> $<%= purchase.service.price.toFixed(2) %> <br>
                        <strong>Date Requested:</strong> <%= new Date(purchase.datePurchased).toLocaleDateString() %>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No requested services at the moment.</p>
        <% } %>

        <!-- Purchased Services Section -->
        <h2>Purchased Services</h2>
        <% if (purchasedServices.length > 0) { %>
            <ul class="list-group mb-5">
                <% purchasedServices.forEach(purchase => { %>
                    <li class="list-group-item">
                        <strong>Service:</strong> <%= purchase.service.name %> <br>
                        <strong>Price:</strong> $<%= purchase.service.price.toFixed(2) %> <br>
                        <strong>Date Purchased:</strong> <%= new Date(purchase.datePurchased).toLocaleDateString() %>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No purchased services at the moment.</p>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" 
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" 
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
<footer>
  <%- include("../partials/footer") %>
</footer>
</html>
